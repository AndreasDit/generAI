# LLM Configuration
# OpenAI is the default provider
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Optional: Claude configuration (if you want to use Claude instead)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=4096

# Web search API configuration
BRAVE_API_KEY=your_brave_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Medium API configuration
MEDIUM_INTEGRATION_TOKEN=your_medium_integration_token_here
MEDIUM_AUTHOR_ID=your_medium_author_id_here
MEDIUM_PUBLICATION_ID=your_medium_publication_id_here

# Article defaults
DEFAULT_TAGS=AI,Technology,Writing,Content Creation
DEFAULT_STATUS=draft

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL_DAYS=7
CACHE_DIRECTORY=cache
CACHE_MAX_SIZE_MB=1000

# Feedback loop configuration
FEEDBACK_ENABLED=true
FEEDBACK_APPLY_TO_IDEA_EVALUATION=true
FEEDBACK_MIN_ARTICLES=3

# Research configuration
RESEARCH_DEFAULT_TOPIC=artificial intelligence
RESEARCH_NUM_IDEAS=5
RESEARCH_MAX_IDEAS=10

# Web Search Configuration
WEB_SEARCH_MAX_RESULTS=10
WEB_SEARCH_TIMEOUT=30

# Project Configuration
MAX_PROJECTS=100
AUTO_CLEANUP=true

# Feedback Configuration
MAX_FEEDBACK_ITEMS=1000
FEEDBACK_AUTO_CLEANUP=true

# Medium API Configuration
MEDIUM_API_KEY=your_medium_api_key_here