# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_USE_CACHE=true

# Web search API configuration
BRAVE_API_KEY=your_brave_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Medium API configuration
MEDIUM_INTEGRATION_TOKEN=your_medium_integration_token_here
MEDIUM_AUTHOR_ID=your_medium_author_id_here

# Article defaults
DEFAULT_TAGS=AI,Technology,Writing,Content Creation
DEFAULT_STATUS=draft

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL_DAYS=7
CACHE_DIRECTORY=cache

# Feedback loop configuration
FEEDBACK_ENABLED=true
FEEDBACK_APPLY_TO_IDEA_EVALUATION=true
FEEDBACK_MIN_ARTICLES=3

# Research configuration
RESEARCH_DEFAULT_TOPIC=artificial intelligence
RESEARCH_NUM_IDEAS=5
RESEARCH_MAX_IDEAS=10